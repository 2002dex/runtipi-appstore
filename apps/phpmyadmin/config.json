{
  "$schema": "../app-info-schema.json",
  "name": "phpMyAdmin + MySQL",
  "id": "phpmyadmin",
  "available": true,
  "short_desc": "phpMyAdmin web UI with a bundled MySQL server",
  "author": "phpmyadmin",
  "port": 8282,
  "categories": ["data"],
  "description": "phpMyAdmin web interface to manage a MySQL database. This app deploys a MySQL server and a phpMyAdmin container. Smritimegh will prompt for database credentials during install.",
  "tipi_version": 1,
  "version": "1.0.0",
  "source": "https://github.com/phpmyadmin/docker",
  "exposable": true,
  "dynamic_config": true,
  "supported_architectures": ["amd64", "arm64"],
  "form_fields": [
    {
      "type": "password",
      "label": "MySQL root password",
      "required": true,
      "env_variable": "MYSQL_ROOT_PASSWORD",
      "default": "tipi1234",
      "min": 8,
      "max": 128
    },
    {
      "type": "text",
      "label": "Database name",
      "required": true,
      "env_variable": "MYSQL_DATABASE",
      "default": "phpmyadmin"
    },
    {
      "type": "text",
      "label": "Database user",
      "required": true,
      "env_variable": "MYSQL_USER",
      "default": "phpmyadmin"
    },
    {
      "type": "password",
      "label": "Database user password",
      "required": true,
      "env_variable": "MYSQL_PASSWORD",
      "default": "tipi1234",
      "min": 8
    }
  ]
}