{
  "schemaVersion": 2,
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "services": [
    {
      "name": "db",
      "image": "mysql:8.0",
      "environment": [
        {
          "key": "MYSQL_ROOT_PASSWORD",
          "value": "${MYSQL_ROOT_PASSWORD}"
        },
        {
          "key": "MYSQL_DATABASE",
          "value": "${MYSQL_DATABASE}"
        },
        {
          "key": "MYSQL_USER",
          "value": "${MYSQL_USER}"
        },
        {
          "key": "MYSQL_PASSWORD",
          "value": "${MYSQL_PASSWORD}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/mysql",
          "containerPath": "/var/lib/mysql"
        }
      ],
      "deploy": {
        "resources": {
          "limits": { "memory": "512M" }
        }
      },
      "healthCheck": {
        "test": "mysqladmin ping -h 127.0.0.1 -P 3306 --silent",
        "retries": 10,
        "interval": "5s",
        "timeout": "5s",
        "startInterval": "10s"
      }
    },
    {
      "name": "phpmyadmin",
      "image": "phpmyadmin/phpmyadmin:5.2.3",
      "isMain": true,
      "internalPort": 80,
      "environment": [
        {
          "key": "PMA_HOST",
          "value": "db"
        },
        {
          "key": "PMA_PORT",
          "value": "3306"
        },
        {
          "key": "PMA_ARBITRARY",
          "value": "1"
        }
      ],
      "dependsOn": ["db"],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/phpmyadmin",
          "containerPath": "/sessions"
        }
      ],
      "deploy": {
        "resources": {
          "limits": { "memory": "256M" }
        }
      }
    }
  ]
}
