{
  "$schema": "../app-info-schema.json",
  "id": "openemr",
  "available": true,
  "exposable": true,
  "port": 8084,
  "name": "OpenEMR",
  "short_desc": "Open-source electronic health records and medical practice management",
  "description": "OpenEMR - an open-source electronic health records and medical practice management application.",
  "version": "7.0.3",
  "tipi_version": 1,
  "dynamic_config": true,
  "author": "OpenEMR Community",
  "source": "https://github.com/openemr/openemr",
  "website": "https://www.open-emr.org",
  "supported_architectures": ["arm64", "amd64"],
  "categories": ["data", "security"],
  "form_fields": [
    {
      "type": "text",
      "label": "OpenEMR Admin username",
      "required": true,
      "default": "admin",
      "env_variable": "OE_USER"
    },
    {
      "type": "password",
      "label": "OpenEMR Admin password",
      "required": true,
      "default": "pass",
      "env_variable": "OE_PASS",
      "min": 4
    },
    {
      "type": "password",
      "label": "MariaDB root password",
      "required": true,
      "default": "root",
      "env_variable": "MYSQL_ROOT_PASSWORD",
      "min": 4
    },
    {
      "type": "text",
      "label": "MariaDB username",
      "required": true,
      "default": "openemr",
      "env_variable": "MYSQL_USER"
    },
    {
      "type": "password",
      "label": "MariaDB password",
      "required": true,
      "default": "openemr",
      "env_variable": "MYSQL_PASS",
      "min": 4
    }
  ]
}