{
  "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "frigate",
      "image": "ghcr.io/blakeblackshear/frigate:0.16.1-rk",
      "isMain": true,
      "internalPort": 8971,
      "networkMode": "host",
      "privileged": true,
      "shmSize": "536870912",
      "stopGracePeriod": "30s",
      "devices": [
        "/dev/dri",
        "/dev/dri/card0:/dev/dri/card0",
        "/dev/video-dec0:/dev/video-dec0",
        "/dev/video-enc0:/dev/video-enc0",
        "/dev/rga",
        "/dev/mpp_service",
        "/dev/dri/renderD128:/dev/dri/renderD128",
        "/dev/dri/renderD129"
      ],
      "addPorts": [
        {
          "containerPort": 8554,
          "hostPort": 8554,
          "tcp": true,
          "interface": "${NETWORK_INTERFACE:-0.0.0.0}"
        },
        {
          "containerPort": 8971,
          "hostPort": 8971,
          "tcp": true
        }
      ],
      "environment": [
        { 
          "key": "FRIGATE_RTSP_PASSWORD", 
          "value": "password" 
        },
        { 
          "key": "TZ", 
          "value": "${TZ}" 
        },
        {
          "key": "FRIGATE_JWT_SECRET",
          "value": "iBFcoalGWCj30UW2BzLnShsRsRF7zcnJ"
        }
      ],
      "volumes": [
        {
          "hostPath": "/etc/localtime",
          "containerPath": "/etc/localtime",
          "readOnly": true
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/storage",
          "containerPath": "/media/frigate"
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/cache",
          "type": "tmpfs",
          "containerPath": "/tmp/cache",
          "tmpfs": { "size": 1000000000 }
        }
      ]
    }
  ]
}